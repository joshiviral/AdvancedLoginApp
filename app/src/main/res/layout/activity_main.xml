<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_above="@id/etx_username"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/login"
        android:scaleType="fitCenter" />

    <EditText
        android:id="@+id/etx_username"
        android:layout_width="155dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:background="@drawable/edit_rounded"
        android:drawableLeft="@drawable/ic_action_user"
        android:hint="Username"
        android:inputType="text"
        android:padding="10dp" />

    <EditText
        android:id="@+id/etx_password"
        android:layout_width="155dp"
        android:layout_height="40dp"
        android:layout_below="@id/etx_username"
        android:layout_centerInParent="true"
        android:layout_marginTop="10dp"
        android:background="@drawable/edit_rounded"
        android:drawableLeft="@drawable/ic_action_pass"
        android:hint="Password"
        android:inputType="text"
        android:padding="10dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cdv_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/etx_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:elevation="20dp"
        android:paddingTop="30dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Login"
                android:textColor="#ffff"
                android:textSize="18dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cdv_btn_facebook"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_below="@id/cdv_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:elevation="20dp"
        android:paddingTop="30dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="25dp">


        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="70dp"
            android:drawableLeft="@drawable/facebook"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/img_facebook"
                android:layout_marginTop="5dp"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:background="@drawable/facebook" />
            <TextView
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_toRightOf="@id/img_facebook"
                android:hint="Sign In Through Facebook"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:id="@+id/cdv_btn_gmail"
        android:layout_width="230dp"
        android:layout_height="50dp"
        android:layout_below="@id/cdv_btn_facebook"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:elevation="20dp"
        android:paddingTop="30dp"
        app:cardBackgroundColor="@color/colorPrimaryDark"
        app:cardCornerRadius="25dp">


        <RelativeLayout
            android:layout_width="220dp"
            android:layout_height="70dp"
            android:layout_marginBottom="10dp">

            <ImageView
                android:id="@+id/img_gmail"
                android:layout_marginTop="5dp"
                android:layout_width="45dp"
                android:layout_height="40dp"
                android:background="@drawable/gmail" />
            <TextView
                android:layout_centerInParent="true"
                android:layout_marginLeft="10dp"
                android:layout_width="180dp"
                android:layout_height="35dp"
                android:layout_toRightOf="@id/img_gmail"
                android:hint="Sign In Through Gmail"/>
        </RelativeLayout>

    </android.support.v7.widget.CardView>


</RelativeLayout>