<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="250dp"
        android:layout_height="250dp"
        android:layout_above="@id/etx_username"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/login"
        android:scaleType="fitCenter" />

    <EditText
        android:id="@+id/etx_username"
        android:layout_width="155dp"
        android:layout_height="40dp"
        android:layout_centerInParent="true"
        android:background="@drawable/edit_rounded"
        android:drawableLeft="@drawable/ic_action_user"
        android:hint="Username"
        android:inputType="text"
        android:padding="10dp" />

    <EditText
        android:id="@+id/etx_password"
        android:layout_width="155dp"
        android:layout_height="40dp"
        android:layout_below="@id/etx_username"
        android:layout_centerInParent="true"
        android:layout_marginTop="28dp"
        android:background="@drawable/edit_rounded"
        android:drawableLeft="@drawable/ic_action_pass"
        android:hint="Password"
        android:inputType="text"
        android:padding="10dp" />

    <android.support.v7.widget.CardView
        android:id="@+id/cdv_btn"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/etx_password"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:elevation="20dp"
        android:paddingTop="30dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Login"
                android:textColor="#ffff"
                android:textSize="18dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:id="@+id/cdv_btn_facebook"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_below="@id/cdv_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp"
        android:elevation="20dp"
        android:paddingTop="30dp"
        app:cardBackgroundColor="@color/colorAccent"
        app:cardCornerRadius="25dp">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="15dp"
                android:layout_height="20dp"

                android:drawableLeft="@drawable/facebook"
                android:text="Login"
                android:textColor="#ffff"
                android:textSize="18dp" />
        </RelativeLayout>

    </android.support.v7.widget.CardView>


    <ImageView
        android:id="@+id/img_gmail"
        android:layout_width="45dp"
        android:layout_height="40dp"

        android:background="@drawable/gmail"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="100dp"/>

</RelativeLayout>